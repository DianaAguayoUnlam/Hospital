<!DOCTYPE html>
<html lang="es-ar">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Web de examen para el Hospital Italiano">
    <meta name="author" content="Diana Aguayo - Desarrolladora Frontend">
    <title>@ViewBag.Title</title>


    <!--CSS-->
    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/carousel/">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- Custom styles -->
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }
    </style>
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-custom py-2">
            <div class="container mw-custom">


                <a class="navbar-brand" href="#">
                    <img src="~/Content/img/logotipo-IUHI-BLANCO-.svg" class="logo" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end my-3" id="navbarCollapse">

                    <form class="d-flex align-items-center search position-relative">
                        <input class="form-control me-2 rounded-pill" type="search" aria-label="Search">
                        <button class="btn position-absolute p-0 rounded-circle search" type="submit">
                            <i class="fas fa-search p-1 rounded-circle border"></i>
                        </button>
                    </form>

                    <span class="text-white mx-4 d-none d-lg-block">|</span>
                    <i class="far fa-user-circle text-white me-2 fs-4"></i>
                    <div class="d-block lh-1 text-white usuario">

                        <p class="p-0 m-0">
                            @Session["nombre_usuario"]
                        </p>
                        @Html.ActionLink("cerrar sesión", "CerrarSession", "Home", new { @class = "nav-link text-white p-0" })


                    </div>

                </div>
            </div>
        </nav>
    </header>

    <main>

        <div id="myCarousel" class="carousel slide mb-0" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/img/Hospital-italiano-banner.jpg" width="100" height="100" />
                    <div class="container">
                        <div class="carousel-caption text-start">
                            <div class="container mw-custom">
                                <div class="row">
                                    <div class="col-lg-6 text-center text-lg-start">
                                        <h1>Lorem ipsum dolor sit amet, comes</h1>
                                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                        <p>
                                            <a class="btn btn-lg rounded-pill border-0 fs-6 pe-4 bg-white text-primary" href="~/Content/Material-descarga.pdf" download="IUHI-carreras">
                                                <img src="/Content/img/flecha-boton-icono.svg" width="40" class="me-2">
                                                DESCARGAR ARCHIVO
                                            </a>
                                        </p>
                                    </div>
                                    <div class="col-lg-6 d-none d-lg-flex justify-content-end">
                                        <img src="~/Content/img/imagen-HEADER.svg" alt="ilustración persona escribiendo" width="310" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Info -->
        <div class="container-fluid info">
            <p class="d-flex text-center py-4 text-primary justify-content-center align-items-center">
                <i class="fas fa-book-open fs-2 me-3"></i>
                Lorem Ipsum is simply dummy text of the printing and typesetting industry.
            </p>
        </div>
        <!-- Info -->

        @RenderBody()

        <!-- FOOTER -->
        <footer class="container-fluid d-flex position-relative">

            <img src="~/Content/img/logotipo-IUHI-BLANCO-.svg" width="250" class="py-4 mx-auto">
            <p class="float-end position-absolute back-top"><a class="nav-link text-white bg-black rounded-circle" href="#">^</a></p>

        </footer>

    </main>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>